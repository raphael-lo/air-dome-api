{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true // Added for production debugging
  },
  "include": ["./src/**/*.ts"], // Explicitly include source files
  "exclude": ["./src/**/*.test.ts", "./src/**/*.spec.ts", "./src/tests", "./node_modules", "./dist"] // Exclude test files and build artifacts
}